{% extends '@Gui/Layout/layout.twig' %}

{% set title = 'Overview of Return' | trans ~ ': ' ~ return.returnReference %}

{% block head_title title | trans %}
{% block section_title title | trans %}

{% block action %}
    {{ backActionButton(url('/sales-return-gui/return'), 'Back to Returns' | trans) }}
    {{ createActionButton(url('/sales-return-gui/slip/print'), 'Print Return Slip' | trans) }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-9">
            {% include '@SalesReturnGui/Return/_partials/returned-items-column.twig' with {
                customer: customer,
                return: return,
            } only %}
        </div>
        <div class="col-lg-3">
            <div class="row">
                <div class="col-lg-12">
                    {% include '@SalesReturnGui/Return/_partials/general-information-column.twig' with {
                        return: return,
                        uniqueOrderReferences: uniqueOrderReferences,
                        uniqueItemStateLabels: uniqueItemStateLabels,
                    } only %}
                </div>
                <div class="col-lg-12">
                    {% include '@SalesReturnGui/Return/_partials/customer-column.twig' with {
                        customer: customer,
                    } only %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ assetsPath('css/spryker-zed-sales-main.css') }}">
{% endblock %}
